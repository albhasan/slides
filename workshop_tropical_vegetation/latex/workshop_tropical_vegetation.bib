  keywords = {Curve fitting,Double-sigmoidal growth,R package,Sigmoidal growth},
  file = {/home/alber/Zotero/storage/N58KW8WS/Caglar et al. - 2018 - Sicegar R package for sigmoidal and double-sigmoidal curve fitting.pdf}
